<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/fantasy_team_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>Fantasy Team List</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to Fantasy eSports</h1>

    <h2>
    	This the home team for fantasy eSports.
    </h2>

    <%= link_to "Sign up now!", signup_path,
                                class: "btn btn-large btn-primary" %>
  </div>

  <%= link_to image_tag("fantasyesports.png", alt: "Fantasy eSports"), 'http://softwarewithmike.com/' %>
<% end %>